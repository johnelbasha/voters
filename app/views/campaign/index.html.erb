<div class="pt-5">
  <h1>Voting Campaign Data</h1>

  <h2>Campaings</h2>

  <div class="container" style="padding-left: 35%; padding-right: 35%;">
    <% @campaigns.each do |c| %>
      <div class="row">
        <div class="col">
          <div class="card mb-4" style="width: 18rem;">
            <img src="vote.png" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= c.campaign_key %></h5>
              <p class="card-text">At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi.</p>
              <%= link_to c.campaign_key, campaign_path(c), class: "btn btn-primary"  %>
            </div>
          </div>   
        </div>
      </div>
    <% end %>
  </div>
</div>
